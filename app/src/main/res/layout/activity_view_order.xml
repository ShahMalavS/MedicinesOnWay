<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ordersummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="49dp">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/order" />

                    <com.malav.medicinesontheway.custom_font.MyTextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORDER SUMMARY"
                        android:textColor="@color/textwhite"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_marginLeft="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ordernumber"
                    android:layout_below="@+id/ordersummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp">

                    <com.malav.medicinesontheway.custom_font.MyTextView
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your order no.:"
                        android:textColor="@color/textOrder"
                        android:textSize="16dp"
                        android:gravity="right"
                        android:layout_gravity="center" />

                    <com.malav.medicinesontheway.custom_font.MyTextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#4343"
                        android:textColor="@color/textred"
                        android:textSize="21dp"
                        android:layout_marginLeft="6dp"
                        android:gravity="left"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:id="@+id/div1"
                    android:layout_below="@+id/ordernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/div"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:id="@+id/date"
                    android:layout_below="@+id/div1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="55dp">

                    <ImageView
                        android:id="@+id/imgDate"
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:src="@drawable/date"
                        android:layout_gravity="right" />

                    <com.malav.medicinesontheway.custom_font.MyTextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="June 23, 2017"
                        android:textColor="@color/textred"
                        android:textSize="21dp"
                        android:layout_marginLeft="6dp"
                        android:gravity="left"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:id="@+id/div2"
                    android:layout_below="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/div"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:id="@+id/delivery"
                    android:layout_below="@+id/div2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="55dp">

                    <ImageView
                        android:id="@+id/truck"
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:src="@drawable/truck"
                        android:layout_gravity="right" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.malav.medicinesontheway.custom_font.MyTextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pickup"
                            android:textColor="@color/textred"
                            android:textSize="21dp"
                            android:layout_marginLeft="6dp"
                            android:gravity="left"
                            android:layout_gravity="center" />

                        <com.malav.medicinesontheway.custom_font.MyTextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="at 12:30 PM"
                            android:textColor="@color/textred"
                            android:textSize="15dp"
                            android:layout_marginLeft="6dp"
                            android:gravity="left"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/div3"
                    android:layout_below="@+id/delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/div"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:id="@+id/payment"
                    android:layout_below="@+id/div3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="55dp">

                    <ImageView
                        android:id="@+id/pay"
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:src="@drawable/truck"
                        android:layout_gravity="right" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.malav.medicinesontheway.custom_font.MyTextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment: Pending"
                            android:textColor="@color/textred"
                            android:textSize="21dp"
                            android:layout_marginLeft="6dp"
                            android:gravity="left"
                            android:layout_gravity="center" />

                        <com.malav.medicinesontheway.custom_font.MyTextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pay Now"
                            android:textColor="@color/textred"
                            android:textSize="18dp"
                            android:layout_marginLeft="6dp"
                            android:gravity="left"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:id="@+id/div4"
                    android:layout_below="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/div"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>


                <LinearLayout
                    android:id="@+id/items"
                    android:layout_below="@+id/div4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp">

                        <com.malav.medicinesontheway.custom_font.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/furni"
                            android:text="View Prescription"
                            android:textSize="17dp"
                            android:textColor="@color/textOrder"
                            android:drawablePadding="13dp" />

                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/box"
                            android:text="View Bill"
                            android:textSize="17dp"
                            android:textColor="@color/textOrder"
                            android:drawablePadding="13dp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
