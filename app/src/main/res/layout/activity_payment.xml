<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/action_bar_color"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.malav.medicinesontheway.custom_font.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="SAVED CARDS"
                android:textColor="@color/lightgrey"
                android:textSize="@dimen/text" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:minHeight="100dp"   />


            <Views
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="135dp"
                android:layout_marginRight="135dp"
                android:layout_marginTop="16dp"
                android:background="@color/lightgrey"/>


            <com.malav.medicinesontheway.custom_font.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="NEW CARDS"
                android:textColor="@color/lightgrey"
                android:textSize="@dimen/text" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_ccv"
                android:orientation="horizontal"
                android:padding="13dp">


                <com.malav.medicinesontheway.custom_font.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:paddingRight="11dp"
                    android:text="CARD NUMBER"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/sub_text" />

                <com.malav.medicinesontheway.custom_font.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:inputType="number"
                    android:maxLength="20"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/text" />


                <!--********you have to code at java side to detect perticular card (visa, mastercard or else)********-->

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/master"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_ccv"
                android:orientation="horizontal"
                android:padding="14dp">


                <com.malav.medicinesontheway.custom_font.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:paddingRight="6dp"
                    android:text="NAME ON CARD"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/sub_text" />

                <com.malav.medicinesontheway.custom_font.MyEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:maxLength="25"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:lines="1"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/text" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ccv"
                    android:orientation="horizontal"
                    android:padding="14dp">


                    <com.malav.medicinesontheway.custom_font.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="6dp"
                        android:text="EXPIRES ON"
                        android:textColor="@color/lightgrey"
                        android:textSize="@dimen/sub_text" />

                    <com.malav.medicinesontheway.custom_font.MyEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:maxLength="5"
                        android:paddingLeft="5dp"
                        android:lines="1"
                        android:paddingRight="5dp"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:textSize="@dimen/text" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ccv"
                    android:orientation="horizontal"
                    android:padding="14dp">


                    <com.malav.medicinesontheway.custom_font.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:paddingRight="6dp"
                        android:text="CCV"
                        android:textColor="@color/lightgrey"
                        android:textSize="@dimen/sub_text" />

                    <com.malav.medicinesontheway.custom_font.MyEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:lines="1"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:textSize="@dimen/text" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/bg_pay"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="14dp">


                <com.malav.medicinesontheway.custom_font.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="CONFIRM AND PAY Rs. 1000.00"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text" />
            </LinearLayout>


            <ImageView
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/img" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>


